import sys
import os

def reader(filename):
    sum=0
    num_chars=0
    with open(filename, "r") as f:
        for line in f:
            for litter in line:
                  for i in litter:
                    if(i !=" " and  i !="\n"):
                        sum+=ord(i)
                        num_chars+=1
    print("Кол-во символов: ", num_chars,"\n","Сумма кодов в файле: ", sum)
    f.close()
content = os.listdir('Os_obolochki/1 lab')
files=list()
for file in content:
    if file.endswith('.txt'):
        files.append(file)
print('Все файлы',files)
